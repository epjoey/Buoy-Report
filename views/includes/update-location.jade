form.form(
  ng-update-location="#{JSON.stringify(location)}",
  ng-update-location-buoys="#{JSON.stringify(buoys)}",
  name="updateLocationForm"
)
  .text-center.mb-20.form-title Configure location
  .field
    label
      span Name
      input(type='text', ng-model='req.name', ng-required='true')

  .field
    label
      span
        a(href="http://www.ndbc.noaa.gov/rmd.shtml", target="_blank") Buoys
      input(type='text', ng-model='req.buoys')

  .field
    label
      span
        a(
          href="https://github.com/moment/moment-timezone/blob/develop/data/packed/latest.json"
          target="_blank"
        ) Timezone
      input(type='text', ng-model='req.timezone')

  .field
    label
      span
        a(
          ng-href="{{ 'https://www.google.com/search?q=' + req.name + '+latitude' }}"
          target="_blank"
        ) Latitude
      input(type='text', ng-model='req.latitude')

  .field
    label
      span
        a(
          ng-href="{{ 'https://www.google.com/search?q=' + req.name + '+longitude' }}"
          target="_blank"
        ) Longitude
      input(type='text', ng-model='req.longitude')

  .field.errors(ng-if="error") {{ error }}

  .btns
    input.btn.submit(
      type="submit",
      ng-click="submit()",
      ng-disabled="loading || updateLocationForm.$invalid || updateLocationForm.$pristine"
      value="Submit"
    )

    if user.email == location.email || isAdmin
      button.btn.delete.right.btn-small(
        ng-click="deleteLocation()",
        ng-disabled="loading"
      ) Delete Location
  .clear

