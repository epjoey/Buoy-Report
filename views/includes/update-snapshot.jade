form.form.mb-20(
  ng-update-snapshot
  name="updateSnapshotForm"
  ng-submit="submit()"
)
  include ./snapshot-fields.jade

  .field.errors(ng-if="error") {{ error }}

  .field.btns.text-center
    span.btn.cancel(ng-click="isEditing[snapshot.id] = false") Cancel
    | &nbsp; &nbsp;
    input.btn.submit(
      type="submit",
      ng-disabled="loading || updateSnapshotForm.$invalid"
      value="{{ loading ? 'Submitting...' : 'Submit' }}"
    )
